#!/usr/bin/env bash

# Check if the '-v' flag is provided.
if [[ "$1" = "-v" ]]; then
    verbose=true
else
    verbose=false
fi

# Find all Git repositories under the current directory.
find . -type d -name .git | sort | sed 's|\/\.git||' | while read -r gitprojpath; do
    (
        cd "$gitprojpath" || exit 1
        # Check if the repository has uncommitted changes.
        if isdirty=$(git status -s | grep "^.*"); then
            if $verbose; then
                printf "\n"
            fi
            printf "DIRTY: %s\n" "$gitprojpath"
            if $verbose; then
                git status -s
            fi
        fi
    )
done
